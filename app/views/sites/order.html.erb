<div class="row">
  <div class="large-7 columns">
    <form action="" id="#order_form" style="background-color: white; padding: 15px">
      <legend><h3>Place your order</h3></legend>
      <span class="select"> Select size: </span>

      <select id="pSize" name="sizeofpizza">
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
      </select>

      <br>
      <br>
      Select Type:

      <input type="radio" name="selectedpizza" value="pepperoni" checked/> Pepperoni
      <input type="radio" name="selectedpizza" value="vegetarian"/> Vegetarian
      <input type="radio" name="selectedpizza" value="combo"/> Combo

      <br>
      <br>
      <input type="checkbox" name="cheese" value="cheese" name="selectedpizza" id="extraCheese" class="check"/>
      <span> Extra cheese </span>

      <br>
      <br>
      <span> Quantity </span>

      <br>

      <div class="row">
        <div class="large-2 columns">
          <input type="text" name="quantity" id="qty" class="left-align" value='1'/>
        </div>
      </div>

      <br>

      <div class="button-group">
        <input type="button" class="button" value="Calculate price" name="calculate" id="total"/>
        <input type="button" class="button" id="addToCart" value="Add to cart" name="add to cart"/>
        <a class="button success" value="go to cart" name="Go to cart" href="../cart"> Go to Cart </a>
      </div>
      <br>
      <br>
      <label style="font-size: 18px"> Price: <span id="price"/></label>
      <br>
      <br>
      <label style="font-size: 20px"> Total Price: <span id="totalPrice"/></label>
    </form>
  </div>

